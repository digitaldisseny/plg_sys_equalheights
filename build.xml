<?xml version="1.0" encoding="UTF-8"?>
<project name="Equalheights" default="site" basedir=".">
    <!-- Do initialization stuff -->
    <target name="prepare" >
        <property file="build.properties"  override="true"/>
        <if>
            <equals arg1="${extension}" arg2="" />
            <then>
                <fail message="Extension not specified, use -Dextension=EXTENSION" />
            </then>
            <else>
                <!--<property file="${extension}.properties"  override="true"/>-->
            </else>
        </if>
    </target>

    <property name="src" value="./" />

    <target name="site" description="Copies files to a existing joomla site" depends="prepare">
        <echo message="Copying plugin..." />

        <!-- Plugin -->
        <copy todir="${www.dir}/plugins/system/equalheights" overwrite="true">
            <fileset dir="${src}">
                <include name="**" />
                <exclude name="build.*" />
                <exclude name="language" />
            </fileset>
        </copy>

        <!-- Plugin - Languages -->
        <copy todir="${www.dir}/administrator/language" overwrite="true">
            <fileset dir="${src}/language">
                <include name="**" />
            </fileset>
        </copy>

    </target>

</project>